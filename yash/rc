alias ls='eza --color=always --color-scale-mode=gradient --icons=always --hyperlink -a --group-directories-first -s=Extension'
alias df='df -h'
alias free='free -h'
alias reboot='sudo reboot'
alias ch='chmod +x'
alias cat='bat'
alias ..='cd .. && pwd'

cp() if [ -t 0 ]; then command cp -i "$@"; else command cp "$@"; fi
mv() if [ -t 0 ]; then command mv -i "$@"; else command mv "$@"; fi
rm() if [ -t 0 ]; then command rm -i "$@"; else command rm "$@"; fi

HISTFILE=/home/bai/.cache/.yash_history
HISTSIZE=5000

fastfetch -c /home/bai/.config/fastfetch/11.jsonc # run fastfetch at startup

bindkey --vi-insert '\^R'  vi-search-backward # search in history
bindkey --vi-command '\^R'  vi-search-backward # search in histor
bindkey --vi-insert '\^L' clear-and-redraw-all # clear screen
bindkey --vi-command '\^L' clear-and-redraw-all # clear screen
  bindkey --vi-insert '\^A' beginning-of-line


  set --le-predict

export PATH=.cargo/bin/:$PATH
export INPUTRC="/tmp/inputrc"

FNM_PATH="/home/bai/.local/share/fnm"
if [ -d "$FNM_PATH" ]; then
  export PATH="$FNM_PATH:$PATH"
  eval "$(fnm env --shell bash)"  # veya --shell zsh, ya da --shell fish
fi

if command --identify vim >/dev/null 2>&1; then

  vi() { vim "$@"; }
  view() { vim -R "$@"; }
  vim() { command vim "$@"; }

fi


