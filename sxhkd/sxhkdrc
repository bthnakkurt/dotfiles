super + c
	kitty
super + w
	firefox
super + d
	rofi -i -show drun -modi drun -show-icons
Print
	flameshot gui
super + Print
	 flameshot gui --raw | tesseract-ocr stdin stdout | xclip -in -selection clipboard
super + v
	kitty -e pulsemixer

super + a
   bspc rule -a kitty -o state=floating; kitty

super + m
   dunstctl close-all


super + shift + q
	bspc quit
super + q
	bspc node -c
super + alt + c
	pkill -USR1 -x sxhkd

super + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

super + @space
	bspc node -t \~floating
super + f 
  bspc node -t '~fullscreen'

XF86MonBrightnessDown
	brillo -U 5 && herbe "$(brillo -G)"
XF86MonBrightnessUp
	brillo -A 5 && herbe "$(brillo -G)"
XF86AudioMute
	pactl set-sink-mute @DEFAULT_SINK@ toggle && herbe "$(pamixer --get-volume)"
XF86AudioLowerVolume
	pactl set-sink-volume @DEFAULT_SINK@ -5% && herbe "$(pamixer --get-volume)"
XF86AudioRaiseVolume
	pactl set-sink-volume @DEFAULT_SINK@ +5% && herbe "$(pamixer --get-volume)"
XF86AudioPlay
   /home/bai/.config/bspwm/music
XF86AudioPrel
	playerctl previous
XF86AudioNext
	playerctl next

@button8
	pactl set-sink-volume @DEFAULT_SINK@ -5% && herbe "$(pamixer --get-volume)"
@button9
	pactl set-sink-volume @DEFAULT_SINK@ +5% && herbe "$(pamixer --get-volume)"
super + @button8
  playerctl previous
super + @button9
  playerctl next
